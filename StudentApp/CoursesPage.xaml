<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentApp.Courses"
             Title="Add / Update Courses">
    <StackLayout Margin="20" Spacing="10" VerticalOptions="StartAndExpand">
        <Label Text="Course Name"  FontAttributes="Bold" />
        <Entry x:Name="txtbxCourseName" Text="{Binding CourseName}" />

        <Label Text="Course Code"  FontAttributes="Bold" />
        <Entry x:Name="txtbxCourseCode" Text="{Binding CourseCode}"/>

        <Label Text="Course Co-ordinator"  FontAttributes="Bold" />
        <Entry x:Name="txtbxCourseCoordinator" Text="{Binding CourseCoordinator}"/>


        <Button Clicked="OnSaveClicked" Text="Save"/>
        <Button Clicked="OnDeleteClicked" Text="Delete"/>
        <Button Clicked="OnCancelClicked" Text="Cancel"/>
        
    </StackLayout>
</ContentPage>