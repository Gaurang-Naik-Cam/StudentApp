<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StudentApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StudentApp"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent Title="Add Courses"
                 Icon="cat.png"
                 ContentTemplate="{DataTemplate local:AddCourses}" />
    <ShellContent Title="Add Students"
                 Icon="dog.png"
                 ContentTemplate="{DataTemplate local:AddStudents}" />
    <ShellContent Title="View Courses"
                 Icon="dog.png"
                 ContentTemplate="{DataTemplate local:ViewCourses}" />
    <ShellContent Title="View Students"
                 Icon="dog.png"
                 ContentTemplate="{DataTemplate local:ViewStudents}" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
