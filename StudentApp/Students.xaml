<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentApp.Students"
             Title="Add /Update Students">
    <StackLayout Margin="20" Spacing="10" VerticalOptions="StartAndExpand">
        <Label x:Name="lblStudentId" IsVisible="true"></Label>
        
        <Label Text="Name" />
        <Entry x:Name="txtbxName" Placeholder="Student Name"/>

        <Label Text="Student Number" />
        <Entry x:Name="txtbxStudentNumber" Placeholder="Student Number"/>

        <Label Text="Address" />
        <Entry x:Name="txtbxStudentAddress" Placeholder="Address"/>

        <Label x:Name ="lblSelectedItem" Text="Selected Text" />
        <Picker x:Name="pcrCourses" Title="Select a Course"></Picker> 

        <Button Clicked="OnSaveClicked" Text="Save"/>
        <Button Clicked="OnDeleteClicked" Text="Delete"/>
        <Button Clicked="OnCancelClicked" Text="Cancel"/>

                
    </StackLayout>
</ContentPage>